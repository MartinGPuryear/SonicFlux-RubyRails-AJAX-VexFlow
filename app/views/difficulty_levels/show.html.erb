		<tr>
			<th>ID</th>
			<th>Label</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= @difficulty_level.id %></td>
			<td><%= @difficulty_level.desc %></td>
		</tr>
	</tbody>
</table>
