<h1>Difficulty Levels</h1>
<h4>(admin-only)</h4>

<a href='<%= new_difficulty_level_path %>'>New Difficulty Level</a>

<% 	if @difficulty_levels.length	%>
		<table class='table table-condensed table-striped table-hover'>
			<thead>
				<tr>
					<th>ID</th>
					<th>Label</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
<%		@difficulty_levels.each { | dl | %>
				<tr>
					<td><%= dl.id %></td>
					<td><%= dl.desc %></td>
					<td>
						<a href='<%= difficulty_level_path(dl.id) %>'>Show</a>
							| 
						<a href='<%= edit_difficulty_level_path(dl.id) %>'>Edit</a>
							| 
						<a href='<%= difficulty_level_path(dl.id) %>' data-method='delete'>Delete</a>
					</td>
				</tr>
<%		}	%>
			</tbody>
		</table>
<%	end  %>
